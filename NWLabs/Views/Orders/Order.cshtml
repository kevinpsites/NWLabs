@model IEnumerable<NWLabs.Models.Assay>
@{
    ViewBag.Title = "New Order";
    int i = new int();
    i = 1;
}

<h2>New Order</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @foreach (var item in Model)
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse-@(item.AssayID)@i">
                            <h4 class="panel-title" style="display:inline; color:black;">
                                @item.AssayName
                            </h4>
                            <h3 class="panel-title pull-right" style="display:inline; color:black;">
                                Quote Price: $@(item.Order_Details.Count)00.00
                            </h3>
                        </a>
                    </div>

                    <div id="collapse-@(item.AssayID)@i" class="panel-collapse collapse">
                        <div class="panel-body">
                            <h4>Assay Tests:</h4>
                            <table class="table">
                                @foreach (var test in item.Tests)
                                {
                                    <tr><td>@test.TestName</td></tr>

                                }
                            </table>
                            
                            <br />
                            @Html.ActionLink("Remove Assay", "RemoveOrder", "Orders", new { id = item.AssayID }, new { @class = "text-right pull-right btn btn-primary", @style = "display:inline;" })


                        </div>
                    </div>
                    
                </div>
                <p style="color:white;">@(i++)</p>
            }
        </div>
        
    </div>


    <div class="row">
        <div class="col-md-4 col-md-offset-10">
            @Html.ActionLink("Submit Order", "OrderForm", "Seattle", null, new { @class="btn btn-primary"})
        </div>
    </div>
</div>