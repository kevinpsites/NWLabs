@model NWLabs.Models.myOrders
@{
    ViewBag.Title = "myOrders";
}
<ol class="breadcrumb">
    <li><a href=@Url.Action("myAccount", "Accounts")>MyAcccount</a></li>
    <li class="active">MyOrders</li>
</ol>
<div class="container-fluid">
    <div class="row"></div>
    <div class="row">
        <div class="col-md-9">
            <h3>Order#: @Model.order.OrderID</h3>
        </div>
        <div class="col-md-3">
            <div class="input-group">
                @foreach (var item in Model.order.Invoices)
                {
                    <h4>Total Cost: $@item.InvoiceTotal</h4>
                }
                
                </div>
           </div> 
        </div>

        <div class="row">
           
            <div class="col-md-4">
                <h4>Assay Name</h4>
            </div>
            <div class="col-md-4">
                <h4>Assay Status</h4>
            </div>
        </div>
        <hr />

    <div class="row">
        <div class="col-md-12">
            <div class="panel-group" id="accordion">
               @foreach (var assay in Model.order.Order_Details)
               {
                    <div class="row">
                        <div class="col-xs-4">
                            <a data-toggle="collapse" href="#answer-@assay.Assay.AssayID">
                                <h4>@assay.Assay.AssayName</h4>
                            </a>
                        </div>
                        <div class="col-md-4">
                            @assay.Status.StatusDesc
                        </div>
                    </div>
                  
                    <div class="row">
                        <div class="col-md-12">
                            <div id="answer-@assay.Assay.AssayID" class="panel-collapse collapse">
                                <div class="panel-heading">Overall Assay Status</div>
                                <div class="panel-body">
                                    @if (assay.Status.StatusID == 1)
                                    {
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped progress-bar-success" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 10%">
                                                @assay.Status.StatusDesc
                                            </div>
                                            
                                        </div>
                                    }
                                    else if (assay.Status.StatusID == 2)
                                    {
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped progress-bar-success" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 10%">
                                                
                                            </div>
                                            <div class="progress-bar progress-bar-warning progress-bar-striped active" style="width: 15%">
                                                @assay.Status.StatusDesc
                                            </div>
                                        </div>
                                    }
                                    else if (assay.Status.StatusID == 3)
                                    {
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped progress-bar-success" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 25%">

                                            </div>
                                            <div class="progress-bar progress-bar-warning progress-bar-striped active" style="width: 15%">
                                                @assay.Status.StatusDesc
                                            </div>
                                        </div>
                                    }
                                    else if (assay.Status.StatusID == 4)
                                    {
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped progress-bar-success" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 40%">

                                            </div>
                                            <div class="progress-bar progress-bar-danger progress-bar-striped active" style="width: 10%">
                                                @assay.Status.StatusDesc
                                            </div>
                                        </div>
                                    }
                                    else if (assay.Status.StatusID == 5)
                                    {
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped progress-bar-success" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 50%">

                                            </div>
                                            <div class="progress-bar progress-bar-warning progress-bar-striped active" style="width: 30%">
                                                @assay.Status.StatusDesc
                                            </div>
                                        </div>
                                    }
                                    else if (assay.Status.StatusID == 6)
                                    {
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped progress-bar-success" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                                @assay.Status.StatusDesc
                                            </div>
                                        </div>
                                    }
                                    else if (assay.Status.StatusID == 7)
                                    {
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped progress-bar-success" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 40%">

                                            </div>
                                            <div class="progress-bar progress-bar-danger progress-bar-striped active" style="width: 10%">
                                                @assay.Status.StatusDesc
                                            </div>
                                        </div>
                                    }

                                   
                                </div>
                               <table class="table">
                                   <th>Test Name</th>
                                   <th>Test Status</th>
                                   <th>Test Report</th>
                                   @foreach (var test in assay.Test_Order_Details)
                                   {<tr>
                                        <td>@test.Test.TestName</td>
                                        <td>@test.Status.StatusDesc</td>
                                        <td>@Html.ActionLink("Report", "Report", "Accounts")</td>
                                        </tr>


                                   }
                               </table>
                            
                            </div>
                        </div>
                    </div>
                    <hr />
               }
            </div>
        </div>
    </div>

</div>
